<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".day1.Day1Fragment"
    android:orientation="vertical"
    android:gravity="center">

    <Button
        android:id="@+id/btn_toast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show_toast"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/btn_snackbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show_snackbar"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/btn_dissnackbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hide_snackbar"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/btn_actionsnack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Munculkan Snackbar dengan Action"
        android:textAllCaps="false"/>

</androidx.appcompat.widget.LinearLayoutCompat>